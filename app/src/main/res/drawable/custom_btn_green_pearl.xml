<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#11cc00" />

            <gradient android:angle="-90" android:endColor="#11cc00" android:startColor="#11cc00" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#11cc00" />

            <solid android:color="#11cc00" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#99CC00" />

            <gradient android:angle="-90" android:endColor="#051016" android:startColor="#99dd11" />
        </shape></item>

</selector>